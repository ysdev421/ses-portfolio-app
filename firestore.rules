rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function hasUserDoc() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isAdmin() {
      return hasUserDoc() && userDoc().data.role == "admin";
    }

    function isDemoUser() {
      return hasUserDoc() && userDoc().data.role == "demo";
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function canWriteAs(uid) {
      return isOwner(uid) && !isDemoUser();
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && !isDemoUser();
      allow delete: if false;
    }

    match /projects/{projectId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if canWriteAs(request.resource.data.userId);
      allow update, delete: if canWriteAs(resource.data.userId);
    }

    match /entries/{entryId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if canWriteAs(request.resource.data.userId);
      allow update, delete: if canWriteAs(resource.data.userId);
    }

    match /interviewLogs/{logId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if canWriteAs(request.resource.data.userId);
      allow update, delete: if canWriteAs(resource.data.userId);
    }

    match /contact_inquiries/{inquiryId} {
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      allow create: if canWriteAs(request.resource.data.userId);
      allow update: if isAdmin();
      allow delete: if false;
    }
  }
}
